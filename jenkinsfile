pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-token', url: 'https://github.com/kelvinSeamount/Bank-App-CD.git'
            }
        }
        
        stage('Kubernetes Deployment') {
            steps {
               withKubeConfig(caCertificate: '', clusterName: ' mekadevops-cluster', contextName: '', credentialsId: 'k8-token', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://A7C06D84CBB2B85071406246F108DD5B.gr7.eu-central-1.eks.amazonaws.com') {
                    sh "kubectl apply -f Manifest/manifest.yaml -n webapps"
                    sh "kubectl apply -f Manifest/HPA.yaml"
                    sleep 30
                    sh "kubectl get pods -n webapps"
                    sh "kubectl get service -n webapps"
                }
            }
        }
        
    }
}
